<Window x:Class="Todo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo" 
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="700">
    <Grid RenderTransformOrigin="0.397,0.439">
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Todo" VerticalAlignment="Top" FontFamily="Arial" FontSize="40" RenderTransformOrigin="-1.176,0.133"/>
        <TextBox Name="txtInput" HorizontalAlignment="Left" Margin="415,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="248" TextChanged="TextBox_TextChanged" RenderTransformOrigin="-0.167,-1.278" Height="28"/>
        <TextBlock HorizontalAlignment="Left" Margin="415,53,0,0" TextWrapping="Wrap" Text="Hãy nhâp vào công việc" VerticalAlignment="Top"/>
        <StackPanel x:Name="myStackPanel" Orientation="Vertical">
        </StackPanel>
        <Button x:Name="save" HorizontalAlignment="Left" Margin="554,117,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click" Background="#FF007BFF" Height="32" Content="Save"/>
        <Button x:Name="show" Margin="554,168,37,782"  Width="109"  Click="Button_Click_1" Background="#FF007BFF" Height="32" Content="Show"/>
    </Grid>
</Window>
